package projeto;

import javax.swing.JOptionPane;

public class swing {

	public static void main(String[] args) {
		String texto = JOptionPane.showInputDialog("Dígite um número");
        JOptionPane.showMessageDialog(null, "Valor dígitado: " + texto);
	}

}

