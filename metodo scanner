package projeto;

import javax.swing.JOptionPane;

public class swing {

	public static void main(String[] args) {
		String texto = JOptionPane.showInputDialog("Dígite um número");
        JOptionPane.showMessageDialog(null, "Valor dígitado: " + texto);
	}

}

---------------------------

package projeto;

import javax.swing.JOptionPane;

public class usoswing {

	public static void main(String[] args) {
		
		String x;
		x = JOptionPane.showInputDialog("Dígite um número");
        int c = Integer.parseInt(x);
            
		if (c < 10) {
	        JOptionPane.showMessageDialog(null, "Valor dígitado é menor que " + x);
		} else {
	        JOptionPane.showMessageDialog(null, "Valor dígitado é maior que " + x);
		}
	}

}

